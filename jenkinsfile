pipeline {
    agent any
    tools{
        nodejs "node"
    }

    stages {
        stage('Git checkout') {
            steps {
               echo 'Git Checkout' 
               git branch: 'main', changelog: false, poll: false, url: 'https://github.com/gops971708/server'
            }
        }
        
       /* stage('install') {
            steps {
              echo 'install npm'
              sh "npm install"
            }
        }
        stage('start ') {
            steps {
              echo 'starting server file'
              sh "npm run dev"
            }
        }
        */

        stage('Build and Push'){
            steps{
                script{
                    
                    withDockerRegistry(credentialsId: 'b08c79a6-4d05-4a06-a95d-c2b9c6dd503b') {
                        sh "docker build -t gops84490/server:1.0 ."
                        sh "docker push gops84490/server:1.0"
                    }
                }
            }
        }
    }
}
